<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ztz.system.dao.CompanyMapper">
    <resultMap id="BaseResultMap" type="com.ztz.system.pojo.Company">
        <id column="company_id" property="companyId" jdbcType="INTEGER"/>
        <result column="company_name" property="companyName" jdbcType="VARCHAR"/>
        <result column="company_introduction" property="companyIntroduction" jdbcType="VARCHAR"/>
        <result column="company_order_finish_time" property="companyOrderFinishTime" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="Base_Column_List">
        company_id, company_name, company_introduction, company_order_finish_time
    </sql>

    <!--// 通过id查找公司-->
    <!--Company getCompanyById(Integer id);-->

    <!--// 查找全部公司-->
    <!--List<Company> getAllCompanies();-->

    <select id="getCompanyById" parameterType="java.lang.Integer" resultType="com.ztz.system.pojo.Company">
        select *
        from company
        where company_id = #{id,jdbcType=INTEGER}
    </select>

    <select id="getAllCompanies" resultType="com.ztz.system.pojo.Company">
        SELECT *
        FROM company
    </select>

    <!--// 查找部分公司-->
    <!--List<Company> getSelectiveCompanies(String text);-->
    <select id="getSelectiveCompanies" parameterType="java.lang.String" resultType="com.ztz.system.pojo.Company">
        select *
        from company
        where company_id like CONCAT('%',#{text, jdbcType=VARCHAR},'%')
        or company_name like CONCAT('%',#{text, jdbcType=VARCHAR},'%')
        or company_introduction like CONCAT('%',#{text, jdbcType=VARCHAR},'%')
    </select>

    <!--// 增-->
    <!--int insertCompany(Company company);-->
    <insert id="insertCompany" parameterType="com.ztz.system.pojo.Company">
        insert into company
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="companyId != null">
                company_id,
            </if>
            <if test="companyName != null">
                company_name,
            </if>
            <if test="companyIntroduction != null">
                company_introduction,
            </if>
            <if test="companyOrderFinishTime != null">
                company_order_finish_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="companyId != null">
                #{companyId,jdbcType=INTEGER},
            </if>
            <if test="companyName != null">
                #{companyName,jdbcType=VARCHAR},
            </if>
            <if test="companyIntroduction != null">
                #{companyIntroduction,jdbcType=VARCHAR},
            </if>
            <if test="companyOrderFinishTime != null">
                #{companyOrderFinishTime,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>

    <!--// 删-->
    <!--int deleteCompany(Integer id);-->
    <delete id="deleteCompany" parameterType="java.lang.Integer">
        delete from company
        where company_id = #{id,jdbcType=INTEGER}
    </delete>

    <!--// 改-->
    <!--int updateCompany(Company company);-->
    <update id="updateCompany" parameterType="com.ztz.system.pojo.Company">
        update company
        <set>
            <if test="companyName != null">
                company_name = #{companyName,jdbcType=VARCHAR},
            </if>
            <if test="companyIntroduction != null">
                company_introduction = #{companyIntroduction,jdbcType=VARCHAR},
            </if>
            <if test="companyOrderFinishTime != null">
                company_order_finish_time = #{companyOrderFinishTime,jdbcType=INTEGER},
            </if>
        </set>
        where company_id = #{companyId,jdbcType=INTEGER}
    </update>

</mapper>